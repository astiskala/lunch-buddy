{
  "name": "lunch-buddy",
  "version": "1.18.2",
  "private": true,
  "scripts": {
    "build": "ng build",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "generate:env": "node tools/write-runtime-env.mjs",
    "prebuild": "npm run generate:env",
    "lint:check": "npm run lint:eslint && npm run lint:styles && npm run format:check",
    "lint:eslint:fix": "eslint . --max-warnings=0 --fix",
    "lint:eslint": "eslint . --max-warnings=0",
    "lint:styles:fix": "stylelint \"src/**/*.scss\" --fix",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint": "npm run lint:eslint:fix && npm run lint:styles:fix && npm run format",
    "mcp": "node tools/diagnostics-mcp.mjs",
    "mcp:check": "node tools/mcp-smoke.mjs",
    "postinstall": "npm run generate:env && node tools/install-playwright.mjs",
    "prepare": "husky",
    "prestart": "npm run generate:env",
    "pretest": "npm run generate:env",
    "prewatch": "node tools/write-version.js && node tools/write-pwa-version.js",
    "release": "semantic-release",
    "start": "ng serve",
    "test:e2e": "playwright test",
    "test:watch": "ng test --watch",
    "test": "ng test --watch=false --coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "bracketSameLine": true,
    "printWidth": 80,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.component.html",
          "*.directive.html"
        ],
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{ts,js,html}": [
      "eslint --cache --fix --max-warnings=0 --no-warn-ignored",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  },
  "overrides": {
    "tar": "7.5.7",
    "npm": {
      "tar": "7.5.7"
    }
  },
  "dependencies": {
    "@angular/cdk": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/material": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@angular/service-worker": "^21.1.2",
    "@upstash/redis": "^1.36.2",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.2.0",
    "@angular-eslint/eslint-plugin": "21.2.0",
    "@angular-eslint/eslint-plugin-template": "21.2.0",
    "@angular-eslint/schematics": "21.2.0",
    "@angular-eslint/template-parser": "21.2.0",
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@axe-core/playwright": "^4.11.1",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.38.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/test": "^1.58.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.5",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vercel/node": "^5.5.33",
    "@vitest/coverage-v8": "^4.0.18",
    "angular-eslint": "^21.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-rxjs-x": "^0.9.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "stylelint": "^17.1.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-scss": "^7.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vercel": "^50.13.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": "^22.12.0 || >=24.0.0"
  }
}
