{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "plugins": ["stylelint-scss"],
  "rules": {
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": ["ng-deep"]
      }
    ],
    "selector-type-no-unknown": [
      true,
      {
        "ignore": ["custom-elements"],
        "ignoreTypes": ["/^app-/", "/^mat-/", "/^cdk-/", "/^mdc-/"]
      }
    ],
    "selector-class-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$|^(mat-|mdc-|cdk-)",
      {
        "message": "Expected class selector to be kebab-case",
        "resolveNestedSelectors": true
      }
    ],
    "no-descending-specificity": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "layer", "use", "forward"]
      }
    ],
    "scss/at-mixin-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      {
        "message": "Use kebab-case for mixin names to align with Angular style conventions."
      }
    ],
    "scss/dollar-variable-pattern": [
      "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
      {
        "message": "Use kebab-case for shared SCSS variables."
      }
    ]
  },
  "ignoreFiles": ["**/*.min.css", "node_modules/**"]
}
